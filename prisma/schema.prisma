generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model Conversation {
  id        String   @id @default(cuid())
  sessionId String  
  role      String   
  content   String
  createdAt DateTime @default(now())

  @@index([sessionId, createdAt])
}